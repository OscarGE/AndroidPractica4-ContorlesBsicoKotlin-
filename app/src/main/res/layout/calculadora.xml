<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />
    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="0"
        android:textSize="50sp"
        android:gravity="end|bottom"
        android:background="@drawable/textview_border_1"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_ac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        android:text="AC"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_1"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_mm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:text="+/-"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_1"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_porcen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:text="%"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_1"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_divi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="÷"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_2"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_siete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        android:text="7"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_ocho"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:text="8"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_nueve"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:text="9"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_multi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="×"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_2"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_cuatro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        android:text="4"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_cinco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:text="5"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_seis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:text="6"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_rest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="−"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_2"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_uno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        android:text="1"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"    />
    <Button
        android:id="@+id/btn_dos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:text="2"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_tres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:text="3"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_suma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_2"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_cero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:text="0"
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_punto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        android:text="."
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_3"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btn_igual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="="
        android:textSize="40sp"
        app:backgroundTint="@null"
        android:background="@drawable/button_style_2"
        android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>